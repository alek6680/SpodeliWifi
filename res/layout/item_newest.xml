<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_newest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="vertical"
    android:dividerPadding="10dp" >

    <RelativeLayout
        android:id="@+id/relative_relative_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_item_background"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_newest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_newest"
            android:gravity="left"
            android:padding="5dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#517693" />
        


        <!--
           <ImageView
            android:id="@+id/img_newest"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_newest" />
        -->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_newest_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_item_footer_background" >

        <!--
              <ImageView
            android:id="@+id/img_newest_echo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/dummy_echo" />
          -->

        <TextView
            android:id="@+id/txt_newest_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="TextView" /> 

        <TextView
            android:id="@+id/txt_newest_echo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="Password:" />
      
    </RelativeLayout>

</LinearLayout>